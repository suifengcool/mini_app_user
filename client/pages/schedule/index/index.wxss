/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container{
    margin-bottom: 100rpx;
    position: relative;
}
.header{
	background: #fff;
    padding: 7rpx 0 17rpx;
    margin-bottom: 20rpx;
    width:100%;
}
    
.week, .day{ 
    display: inline-block;
    width: 14.286%;
    text-align: center;
    font-size: 12pt;
    color: #333;
}
.date{
	font-size: 10pt;
	text-align: center;
	margin-top:20rpx;
}
.date i{
	margin-left: 20rpx;
}
.day-num{
    height:50rpx;
    line-height:50rpx;
    width:50rpx;
    border-radius:50%;
    margin:0 auto;
}
.active{
    background:#000;
    color:#fff;
}
.choosed{
    background:#F65073;
    color:#fff;
}
.event-list{
    margin-top: 20rpx;
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
}
.event-item{
    padding: 30rpx 30rpx;
    color: #fff;
    border-radius: 5rpx;
    background: #FD834B;
}
.event-item .title{
    font-size: 14pt;
    margin-bottom: 30rpx;
}
.event-item .content{
    font-size: 9pt;
    line-height: 1.5;
}
.create{
    position: fixed;
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    color: #fff;
    background: #55cbc4;
    text-align: center;
    font-size: 10pt;
    bottom: 0;
    left: 0;
}
.create i{
    margin-right: 20rpx;
    font-size: 12pt;
}
.eventNone{
    width:60%;
    text-align: center;
    margin-top:20%;
}
.eventNone .none-img{
    width: 60%;
    height: 280rpx;
}
.eventNone .text{
    text-align:center;
    font-size:11pt;
    color:#979797;
    margin-top:10rpx;
}
.month{
    background: #fff;
    margin-top: 60rpx;
}    
.month-title{ 
    font-weight: 300;
    font-family: PingFangSC-Medium;
    font-size: 1rem;
    color: #000;
    text-align: right;
    padding: 0  .43rem .26rem 0;
    line-height: 1.4rem;
}
.month-title:after{
    left: 85%;
    width: 15%;
}
.month-item .month-item-box{
    margin-top: .175rem;
    display: inline-block;
    width: 14.286%;
    text-align: center;
    font-size: .6rem;
    color: #333;
    padding-bottom: .15rem;
}
.num{
    font-size: 1.3rem;
    line-height: 1.7rem;
    margin-top: .25rem;
    color: #000;
    height: 80rpx;
    position: relative;
}
.num-item{
    width: 1.7rem;
    border-radius: 50%;
    margin: 0 auto;
}
.on{
    background: #FD834B;
    color: #fff;
}

.week-box{
    height: 48rpx;
    line-height: 48rpx;
    background: #F9F9F9;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    z-index: 100;
}
.week-item{
    display: inline-block;
    width: 14.286%;
    text-align: center;
    font-size: 12pt;
    color: #333;
}
.on{
    background: #FD834B;
    color: #fff;
}