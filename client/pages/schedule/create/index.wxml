<!--index.wxml-->
<view class="container">
    <view class="title-box item">
        <view class="title-icon">   
            <i class="iconfont icon-title"></i>
        </view>
        <input placeholder="标题"/>
    </view>
    <view class="content-box item">
        <i class="iconfont icon-bianji1"></i>
        <textarea placeholder-style="font-size:12pt" placeholder="记下免得忘记哦~" name="textarea"/>
        <view class="tip">最多140字</view>
    </view>
    <view class="title-box item">
        <view class="title-icon">   
            <i class="iconfont icon-adress"></i>
        </view>
        <input placeholder="地点"/>
    </view>
    <view class="title-box item">
        <view class="title-icon">   
            <i class="iconfont icon-adress"></i>
        </view>
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
    <view class="picker">
      当前选择: {{date}}
    </view>
  </picker>
        <input placeholder="日期"/>
    </view>
    <view class="time-box">
        <i class="iconfont icon-clock2"></i>
        <view class="time-list">
            <view class="time-item">
                <view class="time-item-left">开始</view>
                <view class="time-item-right"></view>
            </view>
            <view class="time-item">
                <view class="time-item-left">结束</view>
                <view class="time-item-right">
                    <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="picker">
                            当前选择: {{time}}
                        </view>
                    </picker>
                </view>
            </view>
        </view>
    </view>
    <view class="btn">发布</view>
</view>
