/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container{
    margin-bottom: 100rpx;
}
.header{
	background: #fff;
    padding: 7rpx 0 17rpx;
    margin-bottom: 20rpx;
    width:100%;
}
    
.week, .day{ 
    display: inline-block;
    width: 14.286%;
    text-align: center;
    font-size: 12pt;
    color: #333;
}
.date{
	font-size: 10pt;
	text-align: center;
	margin-top:20rpx;
}
.date i{
	margin-left: 20rpx;
}
.day-num{
    height:50rpx;
    line-height:50rpx;
    width:50rpx;
    border-radius:50%;
    margin:0 auto;
}
.active{
    background:#000;
    color:#fff;
}
.choosed{
    background:#F65073;
    color:#fff;
}
.event-list{
    margin-top: 20rpx;
    padding: 0 20rpx;
    width: 100%;
    box-sizing: border-box;
}
.event-item{
    padding: 30rpx 30rpx;
    color: #fff;
    border-radius: 5rpx;
    background: #FD834B;
}
.event-item .title{
    font-size: 14pt;
    margin-bottom: 30rpx;
}
.event-item .content{
    font-size: 9pt;
    line-height: 1.5;
}
.create{
    position: fixed;
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    background: #fff;
    text-align: center;
    font-size: 10pt;
    bottom: 0;
    left: 0;
}
.create i{
    margin-right: 20rpx;
    font-size: 12pt;
}