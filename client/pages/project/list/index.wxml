<!--index.wxml-->
<view class="container">
	<scroll-view scroll-y='true' style="height: 1600rpx;" class="project-box">
	    <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000" duration="1000">    
	        <block wx:for="{{movies}}" wx:key="unique">    
		        <swiper-item>    
		          <image src="{{item.url}}" class="slide-image" mode="aspectFill"/>  
		        </swiper-item>    
	        </block>    
	    </swiper>
    
    	<view class="project-skill-box">
    		<view class="project-skill-title">技术栈</view>
    		<view class="project-skill-detail">
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-h5"></i>
    				<text class="project-skill-detail-item-text">HTML(5)</text>
    			</view>
    			
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-js"></i>
    				<text class="project-skill-detail-item-text">JavaScript</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-webpack"></i>
    				<text class="project-skill-detail-item-text">Webpack</text>
    			</view>
    			
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-css"></i>
    				<text class="project-skill-detail-item-text">CSS(3)</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-gulp"></i>
    				<text class="project-skill-detail-item-text">Gulp</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-node"></i>
    				<text class="project-skill-detail-item-text">NodeJS</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-react"></i>
    				<text class="project-skill-detail-item-text">ReactJS</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-vue"></i>
    				<text class="project-skill-detail-item-text">VueJS</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-mysql"></i>
    				<text class="project-skill-detail-item-text">MySQL</text>
    			</view>
    		</view>
    	</view>

    	<view class="project-skill-box">
    		<view class="project-skill-title">项目类型</view>
    		<view class="project-skill-detail">
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-pcduan"></i>
    				<text class="project-skill-detail-item-text">PC端</text>
    			</view>
    			
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-yidongduan"></i>
    				<text class="project-skill-detail-item-text">H5移动端</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-gongzhonghao"></i>
    				<text class="project-skill-detail-item-text">微信公众号</text>
    			</view>
    			
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-xiaochengxu"></i>
    				<text class="project-skill-detail-item-text">微信小程序</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-webapp"></i>
    				<text class="project-skill-detail-item-text">WebApp</text>
    			</view>
    			<view class="project-skill-detail-item-box">
    				<i class="iconfont icon-xitongguanli"></i>
    				<text class="project-skill-detail-item-text">后台管理系统</text>
    			</view>
    		</view>
    	</view>
    </scroll-view>
</view>
