/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.container-project-list{
    background: #fff;
}
.swiper {
  height: 400rpx;
  width: 100%;
  margin-bottom: 30rpx;
  position: relative;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.swiper .wx-swiper-dots{
    margin-bottom: 60rpx;
}
.search{
    position:absolute;
    bottom:9rpx;
    font-size:11pt;
    width:100%;
    left:50%;
    transform:translate(-50%,0);
    display: flex;
    justify-content:space-between;
}
.search input{
    background:#dedede;
    flex: 1;
    border-radius:50rpx;
    margin:0 0 0 30rpx;
    padding:0 30rpx;
    font-size:9pt;
}
.search .btn{
    width:110rpx;
    height:52rpx;
    line-height:52rpx;
    text-align:center;
}
.search .btn .iconfont{
    color:#333;
    font-size:13pt;
}
.list-title{
    display: flex;
    justify-content: space-between;
    height: 68rpx;
    line-height: 68rpx;
    border-top: 0.5rpx solid #E7E7E7;
    border-bottom: 0.5rpx solid #E7E7E7;
    font-size: 30rpx;
    padding: 0 24rpx;
    margin-top: 30rpx;
}
.title i{
    color: #00C99D;
    margin-right: 7rpx;
    font-weight: 700;
    vertical-align: 4%;
}
.listStyle .sort-text{
    font-size: 10pt;
    margin-left: 12rpx;
    display: inline-block;
}
.listStyle .sort-text i{
    font-size:14pt;
	vertical-align:-5%;
}

.list{
	height: 130rpx;
	border-bottom: 0.5rpx solid #dedede;
	display: flex;
	padding: 10rpx 30rpx;
	font-size: 9pt;
}
.list .img{
	width: 120rpx;
	height: 120rpx;
	margin-right: 15rpx;
}
.list .desc{
	flex: 1;
	padding:8rpx 0;
    font-size:11px;
}
.type-box{
    width: 100%;
    height: 150rpx;
    white-space: nowrap;
}
.type-box .type-item{
    display: inline-block;
    width: 150rpx;
    height: 100rpx;
    margin-right: 20rpx;
    border-right: 0.5rpx solid #dedede;
    text-align: center;
    margin-top: 30rpx;
}
.type-item i{
    font-size: 20pt;
    display: block;
}
.type-item-text{
    font-size: 7pt;
    margin-top: 10rpx;
}
.name{
    font-size:13px;
    font-weight:600;
}
.time{
    margin:8rpx 0;
}

