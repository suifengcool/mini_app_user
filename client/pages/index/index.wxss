/**index.wxss**/
page {
    background-color: rgba(255,191,0,0.44);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.userinfo-avatar {
	width: 150rpx;
	height: 150rpx;
	border-radius: 50%;
	margin: 200rpx 0 40rpx 0;
}
.userinfo-nickname {
	color: #777;
	font-size: 15px;
}

.userinfo-guide{
	position: fixed;
	left: 0%;
	top: 70%;
	width: 100%;
}

.userinfo-guide button{
	width: 50%;
	background: rgba(241, 170, 51, 0.58);
	font-size: 36rpx;
	height: 80rpx;
	line-height: 80rpx;
	color: rgb(107, 90, 90);
}