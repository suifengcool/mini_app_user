    <!-- 日程 -->
    <view class="container-schedule" hidden="{{currentTab != 1}}">
        <view class="week-box">
            <text class="week-item" wx:for="{{weekList}}" wx:key="unique">{{item}}</text>
        </view>
        <view class="month">
            <view class="border-bottom month-title">{{month-1 == 0 ? '12' : month-1}}月</view>
            <view class="month-item">
                <view 
                    wx:for="{{lastMonthEventList}}" 
                    wx:key="unique" 
                    class="month-item-box"
                >
                    <navigator 
                        url="../schedule/detail/index?year={{year}}&month={{month-1 == 0 ? '12' : month -1}}&day={{item.day}}"  
                        wx:if="{{item.day && item.day != ''}}"
                        class="num"
                    >
                        {{item.day}}
                    </navigator>
                </view>
            </view>
        </view>
        <view class="month">
            <view class="border-bottom month-title">{{month}}月</view>
            <view class="month-item">
                <view 
                    wx:for="{{currentMonthEventList}}" 
                    wx:key="unique" 
                    class="month-item-box"
                >
                    <navigator 
                        url="../schedule/detail/index?year={{year}}&month={{month}}&day={{item.day}}" 
                        wx:if="{{item.day && item.day != ''}}" class="num"
                    >
                        <view class="num-item {{item.day == day ? 'on' : ''}}">{{item.day}}</view>
                        <view wx:if="{{item.event && item.event.length != 0}}" class="event-list">
                            <image
                                class="point-img"
                                src="../../image/point.png"
                                background-size="cover"
                            ></image>
                        </view>
                    </navigator>
                </view>
            </view>
        </view>
        <view class="month">
            <view class="border-bottom month-title">{{month -12 >= 0 ? month - 11 : month + 1}}月</view>
            <view class="month-item">
                <view 
                    wx:for="{{nextMonthEventList}}" 
                    wx:key="unique" 
                    class="month-item-box"
                >
                    <navigator 
                        url="../schedule/detail/index?year={{month -12 >= 0 ? year + 1 : year}}&month={{month -12 >= 0 ? month - 11 : month + 1}}&day={{item.day}}"  
                        wx:if="{{item.day && item.day != ''}}"
                        class="num"
                    >
                        {{item.day}}
                    </navigator> 
                </view>
            </view>
        </view>
    </view>


